// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")   // für App (Pooler in Vercel)
  directUrl = env("DIRECT_URL")     // für Migration (Direct 5432 in GitHub Actions)
}

// Minimalmodell, damit Prisma valide ist
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  createdAt DateTime @default(now())
}
